do_install() {
	# meson installs binary + desktop file
	vmkdir usr/share/wayland-sessions
	vmkdir etc/mango
	vcopy build/mango usr/bin/
	vcopy mango.desktop usr/share/wayland-sessions/
	vcopy config.conf etc/mango/
}
